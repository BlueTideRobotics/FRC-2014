// Nicholas Currault, 11/8/13

#include "WPILib.h"
#include "Solenoid.h"

class RobotDemo : public SimpleRobot
{	
	DigitalInput irSensor;
	DigitalInput limitSwitch;
	AnalogChannel *ultrasonic;//Analog is the shiznit

public: 
	RobotDemo(void):
		irSensor(5),
		limitSwitch(10)
		

	{
		ultrasonic=new AnalogChannel(1);
			//leave this here
	}

	void Autonomous(void)
	{
	}

	void OperatorControl(void)
	{
		
		int ultraDist;
		while (IsOperatorControl())
		{
			ultraDist = (ultrasonic->GetVoltage()-4839)/512;
			
			SmartDashboard::PutBoolean("IR Sensor",irSensor.Get());
			SmartDashboard::PutBoolean("Limit Switch", limitSwitch.Get());
			SmartDashboard::PutNumber("Ultra Sonic (inches)", ultraDist );
		}
	}
	
	/**
	 * Runs during test mode
	 */
	void Test() {

	}
};

START_ROBOT_CLASS(RobotDemo);

